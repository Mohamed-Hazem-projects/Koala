@model SignUpViewModel

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>SignUp</h1>

<form class="login100-form validate-form" asp-action="SignUp" method="post">
	<span class="login100-form-logo">
		<i class="zmdi zmdi-landscape"></i>
	</span>

	<span class="login100-form-title p-b-34 p-t-27">
		Register
	</span>

	<div class="wrap-input100 validate-input" data-validate="Enter First Enter Last Name">
		<input class="input100" type="text" asp-for="FirstName" placeholder="First Name">
		<span asp-validation-for="FirstName"></span>
	</div>
	<br />
	<div class="wrap-input100 validate-input" data-validate="Enter Last Name">
		<input class="input100" type="text" asp-for="LastName" placeholder="last Name">
		<span asp-validation-for="LastName"></span>
	</div>
	<br />
	<div class="wrap-input100 validate-input" data-validate="Enter Email">
		<input class="input100" type="email" asp-for="Email" placeholder="Email Name">
		<span asp-validation-for="Email"></span>
	</div>
	<br />
	<div class="wrap-input100 validate-input" data-validate="Enter Password">
		<input class="input100" type="password" asp-for="Password" placeholder="Password">
		<span asp-validation-for="Password"></span>
	</div>
	<br />
	<div class="wrap-input100 validate-input" data-validate="Enter Confirm Password">
		<input class="input100" type="text" asp-for="ConfirmPassword" placeholder="Confirm Password">
		<span asp-validation-for="ConfirmPassword"></span>
	</div>
	<br />
	<div class="contact100-form-checkbox">
		<input type="checkbox">
		<span>I Agree the terms & Conditions</span>
	</div>

	<div class="container-login100-form-btn">
		<input class="login100-form-btn" type="submit" value="SignUp" />
	</div>

	<br />
	<div class="container-login100-form-btn">
		<a class="login100-form-btn" asp-action="Login">
			Login
		</a>
	</div>

</form>


