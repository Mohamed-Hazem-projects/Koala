@{
    ViewData["Title"] = "Dashboard";
}

<div class="container">
    <div class="container-fluid p-0">
        <!-- Dashboard Header -->
        <div class="row bg-dark text-white p-4">
            <div class="col-md-6">
                <h1 class="display-5 text-white fw-bold">Koala Dashboard</h1>
                <p class="lead text-white">Your Inventory at a Glance</p>
            </div>
            <div class="col-md-6 text-end align-self-center">
                <button class="btn btn-light btn-lg">Generate Report</button>
                <button class="btn btn-primary btn-lg">Add New Item</button>
            </div>
        </div>

        <!-- Stats Widgets -->
        <div class="row text-white text-center mt-4">
            <div class="col-md-3">
                <div class="bg-primary p-4 rounded shadow-sm">
                    <i class="bi bi-box-seam display-4"></i>
                    <h2 class="mt-3">1200</h2>
                    <p>Total Items</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="bg-success p-4 rounded shadow-sm">
                    <i class="bi bi-arrow-up-right-circle display-4"></i>
                    <h2 class="mt-3">320</h2>
                    <p>Items Sold Today</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="bg-warning p-4 rounded shadow-sm">
                    <i class="bi bi-exclamation-triangle display-4"></i>
                    <h2 class="mt-3">5</h2>
                    <p>Low Stock</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="bg-danger p-4 rounded shadow-sm">
                    <i class="bi bi-person-lines-fill display-4"></i>
                    <h2 class="mt-3">75</h2>
                    <p>New Orders</p>
                </div>
            </div>
        </div>

        <!-- Graph Section -->
        <div class="row mt-5">
            <div class="col-md-8">
                <div class="bg-white p-4 rounded shadow-sm">
                    <h4>Sales Overview</h4>
                    <canvas id="salesChart"></canvas> <!-- Placeholder for a chart -->
                </div>
            </div>
            <div class="col-md-4">
                <div class="bg-white p-4 rounded shadow-sm">
                    <h4>Item Categories</h4>
                    <canvas id="categoriesChart"></canvas> <!-- Placeholder for a chart -->
                </div>
            </div>
        </div>

        <!-- Table Section -->
        <div class="row mt-5">
            <div class="col-md-12">
                <div class="bg-white p-4 rounded shadow-sm">
                    <h4>Recent Orders</h4>
                    <table class="table table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>Order ID</th>
                                <th>Item Name</th>
                                <th>Quantity</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>#1241</td>
                                <td>Wireless Mouse</td>
                                <td>10</td>
                                <td><span class="badge bg-success">Completed</span></td>
                                <td>2024-09-20</td>
                                <td><button class="btn btn-sm btn-outline-primary">View</button></td>
                            </tr>
                            <tr>
                                <td>#1242</td>
                                <td>HD Monitor</td>
                                <td>4</td>
                                <td><span class="badge bg-warning">Pending</span></td>
                                <td>2024-09-19</td>
                                <td><button class="btn btn-sm btn-outline-primary">View</button></td>
                            </tr>
                            <tr>
                                <td>#1243</td>
                                <td>Mechanical Keyboard</td>
                                <td>6</td>
                                <td><span class="badge bg-danger">Canceled</span></td>
                                <td>2024-09-18</td>
                                <td><button class="btn btn-sm btn-outline-primary">View</button></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Cards Section -->
        <div class="row mt-5">
            <div class="col-md-4">
                <div class="bg-light p-4 rounded shadow-sm">
                    <h5>Recent Activity</h5>
                    <ul class="list-group">
                        <li class="list-group-item">You added <strong>Wireless Mouse</strong> to inventory.</li>
                        <li class="list-group-item">Order #1241 was completed.</li>
                        <li class="list-group-item">Low stock warning for <strong>HD Monitor</strong>.</li>
                        <li class="list-group-item">User John Doe logged in.</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4">
                <div class="bg-light p-4 rounded shadow-sm">
                    <h5>Stock Alerts</h5>
                    <ul class="list-group">
                        <li class="list-group-item">Only 3 <strong>HD Monitors</strong> left.</li>
                        <li class="list-group-item">Only 5 <strong>Keyboards</strong> left.</li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4">
                <div class="bg-light p-4 rounded shadow-sm">
                    <h5>Notifications</h5>
                    <ul class="list-group">
                        <li class="list-group-item">New message from <strong>Supplier X</strong>.</li>
                        <li class="list-group-item"><strong>System Update</strong> available.</li>
                        <li class="list-group-item">Backup completed successfully.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!--Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Sample chart setup (you can configure this further)
        var ctx1 = document.getElementById('salesChart').getContext('2d');
        var salesChart = new Chart(ctx1, {
            type: 'line',
            data: {
                labels: ['January', 'February', 'March', 'April', 'May'],
                datasets: [{
                    label: 'Sales',
                    data: [150, 200, 180, 220, 170],
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 2,
                    fill: false
                }]
            }
        });

        var ctx2 = document.getElementById('categoriesChart').getContext('2d');
        var categoriesChart = new Chart(ctx2, {
            type: 'doughnut',
            data: {
                labels: ['Electronics', 'Furniture', 'Clothing', 'Accessories'],
                datasets: [{
                    data: [60, 25, 10, 5],
                    backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0']
                }]
            }
        });
    </script>



</div>